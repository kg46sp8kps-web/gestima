<script setup lang="ts">
/**
 * STEP Contour Detail View - WITH 3D VISUALIZATION
 *
 * Shows detailed information about selected STEP file analysis:
 * - 2D SVG preview (via StepContourSvgViewer)
 * - 3D model with contour overlay (via StepViewerWithContour)
 * - Metrics (length, diameter, axis, points count)
 * - Contour point tables (outer/inner)
 * - Features list (collapsible)
 */

import { ref, watch, computed } from 'vue'
import { FileCode, Box, Image } from 'lucide-vue-next'
import { ICON_SIZE } from '@/config/design'
import StepContourSvgViewer from './StepContourSvgViewer.vue'
import StepViewerWithContour from '../visualization/StepViewerWithContour.vue'
import apiClient from '@/api/client'

interface ContourPoint {
  r: number
  z: number
}

interface FeatureSummary {
  type: string
  radius: number
  is_inner: boolean
  z_min: number | null
  z_max: number | null
  axis: string | null
}

interface ContourResult {
  filename: string
  success: boolean
  error?: string
  rotation_axis: string | null
  total_features: number
  parse_ms: number
  profile: {
    total_length: number | null
    max_diameter: number | null
    outer_contour: ContourPoint[]
    inner_contour: ContourPoint[]
    holes: unknown[]
  } | null
  svg_content: string | null
  features: FeatureSummary[]
}

const props = defineProps<{
  result: ContourResult
}>()

const showFeatures = ref(false)
const viewMode = ref<'2d' | '3d'>('2d')

// STEP file data for 3D viewer (lazy loaded)
const stepFileData = ref<ArrayBuffer | null>(null)
const loadingStep = ref(false)
const stepError = ref<string | null>(null)

// Contour data for 3D overlay
const contourData = computed(() => {
  if (!props.result.profile || !props.result.rotation_axis) return null

  return {
    outer_contour: props.result.profile.outer_contour,
    inner_contour: props.result.profile.inner_contour,
    max_diameter: props.result.profile.max_diameter || 0,
    total_length: props.result.profile.total_length || 0,
    rotation_axis: props.result.rotation_axis as 'x' | 'y' | 'z',
  }
})

// Load STEP file when switching to 3D view
watch(viewMode, async (mode) => {
  if (mode === '3d' && !stepFileData.value && !loadingStep.value) {
    await loadStepFile()
  }
})

async function loadStepFile() {
  if (!props.result.filename) return

  loadingStep.value = true
  stepError.value = null

  try {
    // Fetch raw STEP file
    const response = await apiClient.get(`/uploads/drawings/${props.result.filename}`, {
      responseType: 'arraybuffer'
    })

    stepFileData.value = response.data
  } catch (err: unknown) {
    stepError.value = err instanceof Error ? err.message : 'Failed to load STEP file'
    console.error('Error loading STEP file:', err)
  } finally {
    loadingStep.value = false
  }
}

function featureTypeColor(type: string): string {
  switch (type) {
    case 'cylindrical': return 'var(--color-info)'
    case 'cone': return 'var(--color-warning)'
    case 'radius': return 'var(--color-success)'
    default: return 'var(--text-secondary)'
  }
}
</script>

<template>
  <div class="detail-view">
    <!-- View Mode Toggle -->
    <div v-if="result.profile" class="view-toggle">
      <button
        @click="viewMode = '2d'"
        :class="['toggle-btn', { active: viewMode === '2d' }]"
      >
        <Image :size="ICON_SIZE.SMALL" />
        2D SVG
      </button>
      <button
        @click="viewMode = '3d'"
        :class="['toggle-btn', { active: viewMode === '3d' }]"
      >
        <Box :size="ICON_SIZE.SMALL" />
        3D Model
      </button>
    </div>

    <!-- 2D SVG View -->
    <StepContourSvgViewer
      v-if="result.profile && viewMode === '2d'"
      :profile="result.profile"
      :filename="result.filename"
    />

    <!-- 3D View with Contour Overlay -->
    <div v-if="result.profile && viewMode === '3d'" class="viewer-3d-container">
      <div v-if="loadingStep" class="loading-state">
        <div class="spinner"></div>
        <p>Načítání STEP souboru...</p>
      </div>
      <div v-else-if="stepError" class="error-state">
        <p>{{ stepError }}</p>
      </div>
      <StepViewerWithContour
        v-else-if="stepFileData && contourData"
        :stepData="stepFileData"
        :contourData="contourData"
        :showContour="true"
      />
    </div>

    <!-- No contour state -->
    <div v-if="!result.profile" class="no-contour">
      <FileCode :size="32" />
      <p>{{ result.success ? 'Prismatický díl — bez rotační kontury' : result.error }}</p>
    </div>

    <!-- Metrics -->
    <div class="metrics" v-if="result.profile">
      <div class="metric">
        <label>Délka</label>
        <span>{{ result.profile.total_length }} mm</span>
      </div>
      <div class="metric">
        <label>Max Ø</label>
        <span>{{ result.profile.max_diameter }} mm</span>
      </div>
      <div class="metric">
        <label>Osa</label>
        <span>{{ result.rotation_axis?.toUpperCase() || '—' }}</span>
      </div>
      <div class="metric">
        <label>Outer body</label>
        <span>{{ result.profile.outer_contour.length }} bodů</span>
      </div>
      <div class="metric">
        <label>Inner bore</label>
        <span>{{ result.profile.inner_contour.length }} bodů</span>
      </div>
      <div class="metric">
        <label>Díry</label>
        <span>{{ result.profile.holes.length }}</span>
      </div>
    </div>

    <!-- Contour points -->
    <div class="contour-data" v-if="result.profile">
      <div class="contour-section">
        <h4>Outer contour</h4>
        <div class="points-table">
          <div class="pt-row header">
            <span>Z</span><span>R</span><span>Ø</span>
          </div>
          <div v-for="(pt, i) in result.profile.outer_contour" :key="i" class="pt-row">
            <span>{{ pt.z.toFixed(2) }}</span>
            <span>{{ pt.r.toFixed(2) }}</span>
            <span class="dim">{{ (pt.r * 2).toFixed(1) }}</span>
          </div>
        </div>
      </div>
      <div v-if="result.profile.inner_contour.length" class="contour-section">
        <h4>Inner contour</h4>
        <div class="points-table">
          <div class="pt-row header">
            <span>Z</span><span>R</span><span>Ø</span>
          </div>
          <div v-for="(pt, i) in result.profile.inner_contour" :key="i" class="pt-row inner">
            <span>{{ pt.z.toFixed(2) }}</span>
            <span>{{ pt.r.toFixed(2) }}</span>
            <span class="dim">{{ (pt.r * 2).toFixed(1) }}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Features toggle -->
    <div class="features-section">
      <button class="btn-toggle" @click="showFeatures = !showFeatures">
        {{ showFeatures ? '▼' : '▶' }} Features ({{ result.features.length }})
      </button>
      <div v-if="showFeatures" class="features-list">
        <div v-for="(f, i) in result.features" :key="i" class="feature-row">
          <span class="f-type" :style="{ color: featureTypeColor(f.type) }">{{ f.type }}</span>
          <span class="f-radius">R{{ f.radius }}</span>
          <span v-if="f.is_inner" class="f-inner">inner</span>
          <span v-if="f.axis" class="f-axis">{{ f.axis }}</span>
          <span v-if="f.z_min != null" class="f-range">z=[{{ f.z_min?.toFixed(1) }}, {{ f.z_max?.toFixed(1) }}]</span>
        </div>
      </div>
    </div>
  </div>
</template>

